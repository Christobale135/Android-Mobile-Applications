<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blueskies"
    android:orientation="vertical"
    tools:context=".Welcome"
    >


    <TextView
        android:id="@+id/tvSpace10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tvSpace"
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Welcome!"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvSpace1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Sign into your Ultimate"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvUltimate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="Premium account"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvSpace2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/number"
        android:layout_width="301dp"
        android:layout_height="37dp"
        android:layout_marginLeft="30dp"
        android:autoText="false"
        android:ems="10"
        android:hint="Your 13-digit ID number"
        android:inputType="textPersonName"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/darker_gray"
        tools:background="@android:color/background_light" />

    <TextView
        android:id="@+id/tvSpace3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/password"
        android:layout_width="301dp"
        android:layout_height="39dp"
        android:layout_marginLeft="30dp"
        android:ems="10"
        android:hint="Your password"
        android:inputType="textPassword"
        android:textColorHint="@android:color/darker_gray"
        tools:background="@android:color/background_light" />

    <TextView
        android:id="@+id/tvSpace4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginLeft="250dp"
        android:background="@android:color/transparent"
        android:text="FORGOT?"
        android:textColor="@android:color/background_light"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvSpace5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginLeft="250dp"
        android:background="@android:color/transparent"
        android:text="LOGIN"
        android:textColor="@android:color/background_light"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvSpace6"
        android:layout_width="match_parent"
        android:layout_height="68dp" />

    <TextView
        android:id="@+id/click"
        android:layout_width="244dp"
        android:layout_height="34dp"
        android:layout_marginLeft="78dp"
        android:text="Not yet registered? Click here"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvSpace7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvSpace8"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@android:color/background_dark" />

    <TextView
        android:id="@+id/tvAccept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark"
        android:text="                     By using this app, you accept our"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark"
        android:clickable="true"
        android:text="                               terms and conditions"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_dark" />

</LinearLayout>